<?xml version="1.0"?>

<!-- Minimum parameters for Tool file to be recognised: "<tool><clincal_app>" and "<sensor><type>" -->
<!-- A tool is defined a tracking sensor attached to a instrument. -->

<tool>
    <type>pointer</type>
    <id>AnserPointer1</id>
    <name>AnserPointer1</name>
    <description>EMT Pointer</description>
    <manufacturer>UCC</manufacturer>
    <clinical_app>Laboratory</clinical_app>
    <geo_file></geo_file>
    <pic_file>AnserPointer.jpg</pic_file>
    <doc_file></doc_file>
    
    <!-- Instrument -->
    <instrument>
        <type></type>
        <id></id>
        <name></name>
        <manufacturer></manufacturer>
        <description></description>
    </instrument>
    
    <!-- Sensor -->
    <sensor>
        <type>Aurora</type>
        <id>Aurora01</id>
        <name>AuroraSensor1</name>
        <wireless>yes</wireless>
        <DOF>5</DOF>
        <portnumber>1</portnumber>
        <channelnumber>0</channelnumber>
        <manufacturer>NDI</manufacturer>
        <description></description>
        <rom_file></rom_file>
    </sensor>
    
    <!-- Calibration -->
    <calibration>
        <cal_file>Dummy.cal</cal_file>
    </calibration>
</tool>

